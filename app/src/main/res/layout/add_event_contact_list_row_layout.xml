<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/DashBoard_Add_Event_ContactList_View"
    android:background="@color/White">

    <me.grantland.widget.AutofitTextView
        android:id="@+id/DashBoard_Add_Event_ContactList_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="25dp"
        android:layout_toStartOf="@id/DashBoard_Add_Event_ContactList_CheckBox"
        android:maxLines="1"
        android:text="QWERTYUIOPASDFGHJKLZXCVBNM"
        android:textColor="@color/Black"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/DashBoard_Add_Event_ContactList_CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/DashBoard_Add_Event_ContactList_ContactText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/LightGrey"
        android:layout_marginEnd="40dp"
        android:text="Conatats:" />

    <TextView
        android:id="@+id/DashBoard_Add_Event_ContactList_ContactCount"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:textColor="@color/LightGrey"
        android:layout_toEndOf="@+id/DashBoard_Add_Event_ContactList_Name"
        android:gravity="center"
        android:text="1" />
</RelativeLayout>