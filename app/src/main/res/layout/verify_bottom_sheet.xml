<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Verify_BottomSheet_Layout"
    android:background="@color/Blue">

    <ImageView
        android:id="@+id/Verify_BottomSheet_Image"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/checked" />

    <TextView
        android:id="@+id/Verify_BottomSheet_inout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="iN"
        android:textColor="@color/White"
        android:textSize="50sp" />

    <RelativeLayout
        android:id="@+id/Verify_BottomSheet_Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Verify_BottomSheet_Image"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:text="Name:"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/Verify_BottomSheet_Name"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:maxLines="1"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:text="Phone:"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/Verify_BottomSheet_Phone"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:maxLines="1"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:text="Email:"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/Verify_BottomSheet_Email"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="60dp"
            android:maxLines="1"
            android:textColor="@color/White"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Verify_BottomSheet_InOutDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Verify_BottomSheet_Details"
        android:layout_margin="20dp"
        android:background="@color/White">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:text="iN:"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/Verify_BottomSheet_In"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:maxLines="1"
            android:textColor="@color/Blue"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:text="OUt:"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/Verify_BottomSheet_Out"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:maxLines="1"
            android:textColor="@color/Blue"
            android:textSize="20dp" />
    </RelativeLayout>
</RelativeLayout>