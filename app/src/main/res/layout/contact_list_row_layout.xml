<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contact_list_row_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/contact_list_row_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_picture" />

    <TextView
        android:id="@+id/contact_list_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="90sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toStartOf="@id/contact_list_row_elipView"
        android:maxLength="30"
        android:textSize="20sp" />

    <View
        android:id="@+id/contact_list_row_elipView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        />


    <me.grantland.widget.AutofitTextView
        android:id="@+id/contact_list_row_badge"
        android:background="@drawable/badge_amber"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:text="10"
        android:maxLines="1"
        android:gravity="center"
        android:textColor="@color/White"
        android:layout_marginEnd="15dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />

</RelativeLayout>