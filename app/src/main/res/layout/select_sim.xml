<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Alert_Select_Sim_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/Alert_Select_Sim1_Layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/Alert_Select_Sim1_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sim" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/Alert_Select_Sim1_Carrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/Alert_Select_Sim1_Image"
                android:gravity="center"
                android:maxLines="1"
                android:text="Jio 4g"
                android:textColor="@color/Black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Alert_Select_Sim1_PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Alert_Select_Sim1_Carrier"
                android:layout_toEndOf="@id/Alert_Select_Sim1_Image"
                android:gravity="center"
                android:text="9876543210"
                android:textColor="@color/Black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Alert_Select_Sim2_Layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Alert_Select_Sim1_Layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/Alert_Select_Sim2_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sim" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/Alert_Select_Sim2_Carrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/Alert_Select_Sim2_Image"
                android:gravity="center"
                android:text="Jio 4g"
                android:textColor="@color/Black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Alert_Select_Sim2_PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Alert_Select_Sim2_Carrier"
                android:layout_toEndOf="@id/Alert_Select_Sim2_Image"
                android:gravity="center"
                android:text="9876543210"
                android:textColor="@color/Black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Alert_Select_Sim3_Layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Alert_Select_Sim2_Layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/Alert_Select_Sim3_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sim" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/Alert_Select_Sim3_Carrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/Alert_Select_Sim3_Image"
                android:gravity="center"
                android:text="Jio 4g"
                android:textColor="@color/Black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Alert_Select_Sim3_PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Alert_Select_Sim3_Carrier"
                android:layout_toEndOf="@id/Alert_Select_Sim3_Image"
                android:gravity="center"
                android:text="9876543210"
                android:textColor="@color/Black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Alert_Select_Sim4_Layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Alert_Select_Sim3_Layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/Alert_Select_Sim4_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sim" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/Alert_Select_Sim4_Carrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/Alert_Select_Sim4_Image"
                android:gravity="center"
                android:text="Jio 4g"
                android:textColor="@color/Black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Alert_Select_Sim4_PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Alert_Select_Sim4_Carrier"
                android:layout_toEndOf="@id/Alert_Select_Sim4_Image"
                android:gravity="center"
                android:text="9876543210"
                android:textColor="@color/Black" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>